<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ITSamadhan</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site-itsamadhan.css" />
</head>
<body>
    <!-- NAVBAR -->
    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <!-- Sidebar Toggle -->
            <button class="btn btn-outline-light me-2" type="button" data-bs-toggle="offcanvas" data-bs-target="#sidebarOffcanvas">
                <i class="fa fa-bars"></i>
            </button>

            <!-- Brand -->
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">ITSamadhan</a>

            <!-- Right Side (User Dropdown) -->
            <div class="dropdown ms-auto">
                <a class="btn btn-outline-light dropdown-toggle" href="#" role="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fa fa-user"></i> Admin
                </a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                    <li><a class="dropdown-item" href="@Url.Action("Index", "Settings")"><i class="fa fa-cogs"></i> Settings</a></li>
                    <li><a class="dropdown-item" href="#"><i class="fa fa-user-circle"></i> Profile</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item" href="#"><i class="fa fa-sign-out-alt"></i> Logout</a></li>
                </ul>
            </div>
        </div>
    </nav>


    <!-- SIDEBAR -->
    <div class="offcanvas offcanvas-start bg-dark text-light" tabindex="-1" id="sidebarOffcanvas">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title">Menu</h5>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas"></button>
        </div>
        <div class="offcanvas-body">
            <ul class="list-group list-group-flush">
                <li><a class="list-group-item list-group-item-action bg-dark text-light" href="@Url.Action("Index", "Home")"><i class="fa fa-home"></i> Dashboard</a></li>
                <li><a class="list-group-item list-group-item-action bg-dark text-light" href="@Url.Action("About", "Home")"><i class="fa fa-info-circle"></i> About</a></li>
                <li><a class="list-group-item list-group-item-action bg-dark text-light" href="@Url.Action("Contact", "Home")"><i class="fa fa-envelope"></i> Contact</a></li>
                <li><a class="list-group-item list-group-item-action bg-dark text-light" href="#"><i class="fa fa-cogs"></i> Settings</a></li>
            </ul>
        </div>
    </div>

    <!-- MAIN CONTENT -->
    <div class="container mt-4">
        @RenderBody()
    </div>

    <!-- FOOTER -->
    <footer class="bg-dark text-light text-center py-3 mt-4">
        <p>&copy; @DateTime.Now.Year ITSamadhan - All Rights Reserved</p>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
